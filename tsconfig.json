{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
